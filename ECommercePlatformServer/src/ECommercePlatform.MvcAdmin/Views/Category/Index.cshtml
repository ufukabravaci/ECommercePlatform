@using ECommercePlatform.MvcAdmin.Models
@using ECommercePlatform.MvcAdmin.Models.Category
@using ECommercePlatform.MvcAdmin.DTOs.Category
@model PaginatedList<CategoryDto>
@{
    ViewData["Title"] = "Kategoriler";

    var totalCategories = Model?.TotalCount ?? 0;
    var mainCategories = Model?.Items?.Count(c => c.ParentId == null) ?? 0;
    var subCategories = Model?.Items?.Count(c => c.ParentId != null) ?? 0;
}

<!-- Page Header -->
<div class="page-header d-flex justify-content-between align-items-center flex-wrap gap-3 mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-2">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active">Kategoriler</li>
            </ol>
        </nav>
        <h1 class="page-title">Kategori Yönetimi</h1>
        <p class="page-subtitle mb-0">Ürün kategorilerinizi buradan yönetebilirsiniz.</p>
    </div>
    <div class="d-flex gap-2">
        <button type="button" class="btn btn-outline-primary" style="border-radius: 10px;"
                data-bs-toggle="modal" data-bs-target="#categoryTreeModal">
            <i class="fas fa-sitemap me-2"></i>Ağaç Görünümü
        </button>
        <button type="button" class="btn btn-outline-secondary" style="border-radius: 10px;" onclick="location.reload()">
            <i class="fas fa-sync-alt me-2"></i>Yenile
        </button>
        <a asp-action="Create" class="btn btn-primary-gradient">
            <i class="fas fa-plus me-2"></i>Yeni Kategori
        </a>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <div class="col-sm-6 col-xl-4">
        <div class="card stat-card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="stat-icon primary">
                        <i class="fas fa-layer-group"></i>
                    </div>
                    <span class="badge bg-primary bg-opacity-10 text-primary" style="border-radius: 8px;">
                        <i class="fas fa-chart-line me-1"></i>Toplam
                    </span>
                </div>
                <div class="stat-value">@totalCategories</div>
                <div class="stat-label">Toplam Kategori</div>
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-xl-4">
        <div class="card stat-card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="stat-icon success">
                        <i class="fas fa-folder"></i>
                    </div>
                    <span class="badge bg-success bg-opacity-10 text-success" style="border-radius: 8px;">
                        <i class="fas fa-check me-1"></i>Ana
                    </span>
                </div>
                <div class="stat-value">@mainCategories</div>
                <div class="stat-label">Ana Kategori</div>
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-xl-4">
        <div class="card stat-card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="stat-icon warning">
                        <i class="fas fa-folder-tree"></i>
                    </div>
                    <span class="badge bg-warning bg-opacity-10 text-warning" style="border-radius: 8px;">
                        <i class="fas fa-sitemap me-1"></i>Alt
                    </span>
                </div>
                <div class="stat-value">@subCategories</div>
                <div class="stat-label">Alt Kategori</div>
            </div>
        </div>
    </div>
</div>

<!-- Categories Table Card -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center flex-wrap gap-2">
        <h5 class="card-title mb-0">
            <i class="fas fa-list me-2 text-primary"></i>Kategori Listesi
        </h5>
        <div class="d-flex gap-2 align-items-center flex-wrap">
            <!-- Sayfa Boyutu Seçici -->
            <div class="d-flex align-items-center gap-2">
                <label class="text-muted small mb-0 d-none d-sm-inline">Göster:</label>
                <select class="form-select form-select-sm" id="pageSizeSelect" style="width: auto; border-radius: 8px;">
                    @{
                        var pageSizes = new[] { 10, 25, 50, 100 };
                    }
                    @foreach (var size in pageSizes)
                    {
                        if (Model?.PageSize == size)
                        {
                            <option value="@size" selected>@size</option>
                        }
                        else
                        {
                            <option value="@size">@size</option>
                        }
                    }
                </select>
            </div>

            <!-- Arama -->
            <div class="input-group" style="width: 220px;">
                <span class="input-group-text bg-transparent border-end-0" style="border-radius: 10px 0 0 10px;">
                    <i class="fas fa-search text-muted"></i>
                </span>
                <input type="text" class="form-control border-start-0" id="searchInput"
                       placeholder="Kategori ara..." style="border-radius: 0 10px 10px 0;">
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model == null || !Model.Items.Any())
        {
            <!-- Empty State -->
            <div class="text-center py-5">
                <div class="mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-light"
                         style="width: 80px; height: 80px;">
                        <i class="fas fa-folder-open fa-2x text-muted"></i>
                    </div>
                </div>
                <h5 class="text-muted mb-2">Henüz kategori bulunmuyor</h5>
                <p class="text-muted mb-4">İlk kategorinizi ekleyerek başlayın.</p>
                <a asp-action="Create" class="btn btn-primary-gradient">
                    <i class="fas fa-plus me-2"></i>İlk Kategoriyi Ekle
                </a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="categoriesTable">
                    <thead>
                        <tr>
                            <th style="width: 50px;">#</th>
                            <th>Kategori Adı</th>
                            <th>Slug</th>
                            <th>Üst Kategori</th>
                            <th style="width: 120px;" class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var index = (Model.PageIndex - 1) * Model.PageSize + 1;
                        }
                        @foreach (var category in Model.Items)
                        {
                            <tr data-category-id="@category.Id" data-href="@Url.Action("Details", "Category", new { id = category.Id })" class="clickable-row">
                                <td>
                                    <span class="text-muted fw-medium">@index</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="category-icon @(category.ParentId == null ? "bg-primary" : "bg-warning") bg-opacity-15 rounded d-flex align-items-center justify-content-center"
                                             style="width: 40px; height: 40px; flex-shrink: 0;">
                                            <i class="fas @(category.ParentId == null ? "fa-folder" : "fa-folder-tree") @(category.ParentId == null ? "text-primary" : "text-warning")"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0 fw-semibold">@category.Name</h6>
                                            <small class="text-muted">ID: @category.Id.ToString()[..8]...</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <code class="code-badge">@category.Slug</code>
                                </td>
                                <td>
                                    @if (string.IsNullOrEmpty(category.ParentName))
                                    {
                                        <span class="badge-status active">
                                            <i class="fas fa-crown me-1"></i>Ana Kategori
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge-status pending">
                                            <i class="fas fa-arrow-right me-1"></i>@category.ParentName
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex justify-content-center gap-1">
                                        <a asp-action="Edit" asp-route-id="@category.Id"
                                           class="btn btn-sm btn-outline-primary action-btn"
                                           data-bs-toggle="tooltip" title="Düzenle"
                                           style="border-radius: 8px; width: 36px; height: 36px;">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button"
                                                class="btn btn-sm btn-outline-danger action-btn delete-btn"
                                                data-id="@category.Id"
                                                data-name="@category.Name"
                                                data-bs-toggle="tooltip" title="Sil"
                                                style="border-radius: 8px; width: 36px; height: 36px;">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
    @if (Model != null && Model.Items.Any())
    {
        <div class="card-footer bg-transparent d-flex justify-content-between align-items-center flex-wrap gap-2">
            <span class="text-muted" id="categoryCount">
                Toplam <strong>@Model.TotalCount</strong> kategoriden
                <strong>@(((Model.PageIndex - 1) * Model.PageSize) + 1)-@(Math.Min(Model.PageIndex * Model.PageSize, Model.TotalCount))</strong>
                arası gösteriliyor
            </span>

            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Kategori sayfalama">
                    <ul class="pagination pagination-sm mb-0">
                        @* İlk Sayfa *@
                        <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="1" asp-route-pageSize="@Model.PageSize"
                               data-bs-toggle="tooltip" title="İlk Sayfa">
                                <i class="fas fa-angle-double-left"></i>
                            </a>
                        </li>

                        @* Önceki Sayfa *@
                        <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageIndex - 1)" asp-route-pageSize="@Model.PageSize"
                               data-bs-toggle="tooltip" title="Önceki">
                                <i class="fas fa-angle-left"></i>
                            </a>
                        </li>

                        @* Sayfa Numaraları *@
                        @{
                            var startPage = Math.Max(1, Model.PageIndex - 2);
                            var endPage = Math.Min(Model.TotalPages, Model.PageIndex + 2);

                            // En az 5 sayfa göster (mümkünse)
                            if (endPage - startPage < 4)
                            {
                                if (startPage == 1)
                                {
                                    endPage = Math.Min(Model.TotalPages, startPage + 4);
                                }
                                else if (endPage == Model.TotalPages)
                                {
                                    startPage = Math.Max(1, endPage - 4);
                                }
                            }
                        }

                        @if (startPage > 1)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }

                        @for (var i = startPage; i <= endPage; i++)
                        {
                            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                            </li>
                        }

                        @if (endPage < Model.TotalPages)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }

                        @* Sonraki Sayfa *@
                        <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageIndex + 1)" asp-route-pageSize="@Model.PageSize"
                               data-bs-toggle="tooltip" title="Sonraki">
                                <i class="fas fa-angle-right"></i>
                            </a>
                        </li>

                        @* Son Sayfa *@
                        <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@Model.TotalPages" asp-route-pageSize="@Model.PageSize"
                               data-bs-toggle="tooltip" title="Son Sayfa">
                                <i class="fas fa-angle-double-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    }
</div>

<!-- Delete Confirmation Form (Hidden) -->
<form id="deleteForm" asp-action="Delete" method="post" style="display: none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="deleteId" />
</form>

<!-- Category Tree Modal -->
<div class="modal fade" id="categoryTreeModal" tabindex="-1" aria-labelledby="categoryTreeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content" style="border-radius: 16px; border: none;">
            <div class="modal-header border-0 pb-0">
                <div>
                    <h5 class="modal-title fw-bold" id="categoryTreeModalLabel">
                        <i class="fas fa-sitemap me-2 text-primary"></i>Kategori Ağacı
                    </h5>
                    <p class="text-muted small mb-0">Tüm kategorilerin hiyerarşik görünümü</p>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body pt-3">
                @{
                    var categoryTree = ViewBag.CategoryTree as List<CategoryTreeItem>;
                }

                @if (categoryTree == null || !categoryTree.Any())
                {
                    <div class="text-center py-4">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-light mb-3"
                             style="width: 60px; height: 60px;">
                            <i class="fas fa-folder-open fa-lg text-muted"></i>
                        </div>
                        <p class="text-muted mb-0">Henüz kategori bulunmuyor</p>
                    </div>
                }
                else
                {
                    <div class="category-tree">
                        @foreach (var item in categoryTree)
                        {
                            var paddingLeft = item.Level * 24;
                            var isRoot = item.Level == 0;

                            <div class="tree-item" style="padding-left: @(paddingLeft)px;">
                                <div class="tree-item-content @(isRoot ? "root-item" : "child-item")">
                                    @if (!isRoot)
                                    {
                                        <span class="tree-line"></span>
                                    }
                                    <div class="tree-icon @(isRoot ? "root" : "child")">
                                        <i class="fas @(isRoot ? "fa-folder" : "fa-folder-tree")"></i>
                                    </div>
                                    <span class="tree-label">@item.Name</span>
                                    <div class="tree-actions">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="tree-action detail"
                                           data-bs-toggle="tooltip" title="Detay">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="tree-action edit"
                                           data-bs-toggle="tooltip" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="tree-action delete tree-delete-btn"
                                                data-id="@item.Id" data-name="@item.Name"
                                                data-bs-toggle="tooltip" title="Sil">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" style="border-radius: 10px;">
                    <i class="fas fa-times me-2"></i>Kapat
                </button>
                <a asp-action="Create" class="btn btn-primary-gradient">
                    <i class="fas fa-plus me-2"></i>Yeni Kategori
                </a>
            </div>
        </div>
    </div>
</div>

