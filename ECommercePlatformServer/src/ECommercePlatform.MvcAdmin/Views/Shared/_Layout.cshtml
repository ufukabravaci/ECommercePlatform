<!DOCTYPE html>
<html lang="tr" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Commerce Admin</title>

    <!-- THEME FLASH ÖNLEME -->
    <script>
        (function() {
            var theme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-bs-theme', theme);
        })();
    </script>

    <style>
        :root {
            --page-bg-light: #f1f5f9;
            --page-bg-dark: #0f172a;
            --header-bg-light: #ffffff;
            --header-bg-dark: #1e293b;
        }

        html {
            background: var(--page-bg-light);
        }

            html[data-bs-theme="dark"] {
                background: var(--page-bg-dark);
            }

        body {
            background: var(--page-bg-light);
        }

        html[data-bs-theme="dark"] body {
            background: var(--page-bg-dark);
        }

        .main-header {
            background: var(--header-bg-light);
        }

        html[data-bs-theme="dark"] .main-header {
            background: var(--header-bg-dark);
        }

        .main-content {
            background: var(--page-bg-light);
        }

        html[data-bs-theme="dark"] .main-content {
            background: var(--page-bg-dark);
        }

        .page-content {
            background: transparent;
        }
    </style>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Dashboard CSS -->
    <link href="~/css/dashboard.css" rel="stylesheet" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @{
        var userName = Context.Session.GetString("UserName") ?? "Kullanıcı";
        var companyId = Context.Session.GetString("CompanyId");
        var initials = string.Join("", userName.Split(' ').Take(2).Select(x => x.FirstOrDefault())).ToUpper();
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    }

    <!-- Sidebar Overlay (Mobile) -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-logo">
                <i class="fas fa-store"></i>
            </div>
            <span class="sidebar-brand">E-Commerce</span>
        </div>

        <!-- Sidebar Navigation -->
        <nav class="sidebar-nav">
            <!-- Ana Menü -->
            <div class="nav-section-title">Ana Menü</div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(currentAction == "Index" && currentController == "Home" ? "active" : "")"
                       asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
            </ul>

            <!-- E-Ticaret -->
            <div class="nav-section-title">E-Ticaret</div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Product" ? "active" : "")"
                       asp-controller="Product" asp-action="Index">
                        <i class="fas fa-box"></i>
                        <span>Ürünler</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Category" ? "active" : "")"
                       asp-controller="Category" asp-action="Index">
                        <i class="fas fa-layer-group"></i>
                        <span>Kategoriler</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Brand" ? "active" : "")"
                       asp-controller="Brand" asp-action="Index">
                        <i class="fas fa-tags"></i>
                        <span>Markalar</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Order" ? "active" : "")"
                       asp-controller="Order" asp-action="Index">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Siparişler</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Customer" ? "active" : "")"
                       asp-controller="Customer" asp-action="Index">
                        <i class="fas fa-users"></i>
                        <span>Müşteriler</span>
                    </a>
                </li>
            </ul>

            <!-- İçerik Yönetimi -->
            <div class="nav-section-title">İçerik Yönetimi</div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Banner" ? "active" : "")"
                       asp-controller="Banner" asp-action="Index">
                        <i class="fas fa-images"></i>
                        <span>Bannerlar</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Review" && currentAction == "All" ? "active" : "")"
                       asp-controller="Review" asp-action="All">
                        <i class="fas fa-star"></i>
                        <span>Yorumlar</span>
                    </a>
                </li>
            </ul>


            <!-- Yönetim -->
            <div class="nav-section-title">Yönetim</div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Employee" ? "active" : "")"
                       asp-controller="Employee" asp-action="Index">
                        <i class="fas fa-user-friends"></i>
                        <span>Çalışanlar</span>
                    </a>
                </li>
            </ul>

            <!-- Ayarlar -->
            <div class="nav-section-title">Ayarlar</div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Company" ? "active" : "")"
                       asp-controller="Company" asp-action="Index">
                        <i class="fas fa-building"></i>
                        <span>Şirket Ayarları</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Sidebar Footer - User Info -->
        <div class="sidebar-footer">
            <div class="dropdown dropup w-100">
                <button class="user-info-btn w-100" type="button" data-bs-toggle="dropdown" data-bs-placement="top">
                    <div class="user-avatar">@initials</div>
                    <div class="user-details">
                        <div class="user-name">@userName</div>
                        <div class="user-role">
                            @if (string.IsNullOrEmpty(companyId))
                            {
                                <span>Admin</span>
                            }
                            else
                            {
                                <span><i class="fas fa-building me-1"></i>Şirket Yöneticisi</span>
                            }
                        </div>
                    </div>
                    <i class="fas fa-chevron-up ms-auto chevron-icon"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-dark w-100 mb-2" style="border-radius: 12px;">
                    <li>
                        <a class="dropdown-item py-2" asp-controller="Company" asp-action="Index">
                            <i class="fas fa-building me-2 opacity-75"></i>Şirket Ayarları
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item py-2" asp-controller="Employee" asp-action="Index">
                            <i class="fas fa-user-friends me-2 opacity-75"></i>Çalışanlar
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item py-2 text-danger" asp-controller="Auth" asp-action="Logout">
                            <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Header -->
        <header class="main-header">
            <div class="header-left">
                <button class="sidebar-toggle" id="sidebarToggle" type="button">
                    <i class="fas fa-bars"></i>
                </button>

                <!-- Page Title -->
                <div class="header-title d-none d-md-block">
                    <h6 class="mb-0 fw-semibold">@ViewData["Title"]</h6>
                </div>
            </div>

            <div class="header-right">
                <!-- Theme Toggle -->
                <button class="header-btn" id="themeToggle" type="button" title="Tema Değiştir">
                    <i class="fas fa-moon"></i>
                </button>

                <!-- Notifications -->
                <div class="dropdown">
                    <button class="header-btn notification-btn" type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-bell"></i>
                        <span class="notification-badge">3</span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-end notification-dropdown p-0">
                        <div class="notification-header">
                            <h6 class="mb-0 fw-semibold">Bildirimler</h6>
                            <a href="#" class="text-primary small">Tümünü Okundu İşaretle</a>
                        </div>
                        <div class="notification-list">
                            <a href="#" class="notification-item unread">
                                <div class="notification-icon bg-primary-subtle">
                                    <i class="fas fa-shopping-cart text-primary"></i>
                                </div>
                                <div class="notification-content">
                                    <p class="notification-text">Yeni sipariş alındı</p>
                                    <span class="notification-time">2 dakika önce</span>
                                </div>
                            </a>
                            <a href="#" class="notification-item unread">
                                <div class="notification-icon bg-success-subtle">
                                    <i class="fas fa-check text-success"></i>
                                </div>
                                <div class="notification-content">
                                    <p class="notification-text">Ödeme onaylandı</p>
                                    <span class="notification-time">15 dakika önce</span>
                                </div>
                            </a>
                            <a href="#" class="notification-item">
                                <div class="notification-icon bg-warning-subtle">
                                    <i class="fas fa-exclamation text-warning"></i>
                                </div>
                                <div class="notification-content">
                                    <p class="notification-text">Stok uyarısı: 5 ürün tükenmek üzere</p>
                                    <span class="notification-time">1 saat önce</span>
                                </div>
                            </a>
                        </div>
                        <div class="notification-footer">
                            <a href="#">Tüm Bildirimleri Gör</a>
                        </div>
                    </div>
                </div>

                <!-- User Dropdown -->
                <div class="dropdown">
                    <button class="header-user-btn" type="button" data-bs-toggle="dropdown">
                        <div class="header-user-avatar">@initials</div>
                        <div class="header-user-info d-none d-md-block">
                            <span class="header-user-name">@userName</span>
                            <span class="header-user-role">Şirket Yöneticisi</span>
                        </div>
                        <i class="fas fa-chevron-down ms-2 d-none d-md-block" style="font-size: 0.7rem; opacity: 0.7;"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-end user-dropdown">
                        <div class="user-dropdown-header">
                            <div class="user-dropdown-avatar">@initials</div>
                            <div>
                                <div class="fw-semibold">@userName</div>
                                <small class="text-muted">Şirket Yöneticisi</small>
                            </div>
                        </div>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" asp-controller="Company" asp-action="Index">
                            <i class="fas fa-building me-2 text-muted"></i>Şirket Ayarları
                        </a>
                        <a class="dropdown-item" asp-controller="Employee" asp-action="Index">
                            <i class="fas fa-user-friends me-2 text-muted"></i>Çalışanlar
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout">
                            <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                        </a>
                    </div>
                </div>
            </div>
        </header>

        <!-- Page Content -->
        <div class="page-content">
            @RenderBody()
        </div>
    </main>
    !-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Toastr -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    <script>
        // ==================== TOASTR OPTIONS ====================
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "3000"
        };

        @if (TempData["SuccessMessage"] != null)
        {
                <text>toastr.success('@Html.Raw(TempData["SuccessMessage"])');</text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
                <text>toastr.error('@Html.Raw(TempData["ErrorMessage"])');</text>
        }
        @if (TempData["WarningMessage"] != null)
        {
                <text>toastr.warning('@Html.Raw(TempData["WarningMessage"])');</text>
        }
        @if (TempData["InfoMessage"] != null)
        {
                <text>toastr.info('@Html.Raw(TempData["InfoMessage"])');</text>
        }
    </script>

    <script>
        // ==================== SIDEBAR TOGGLE ====================
        (function() {
            var sidebarToggle = document.getElementById('sidebarToggle');
            var sidebar = document.getElementById('sidebar');
            var overlay = document.getElementById('sidebarOverlay');

            if (!sidebarToggle || !sidebar) return;

            // Sayfa yüklendiğinde localStorage'dan state'i oku (Desktop)
            if (window.innerWidth > 992) {
                var isCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
                if (isCollapsed) {
                    sidebar.classList.add('collapsed');
                }
            }

            // Toggle butonuna tıklama
            sidebarToggle.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();

                if (window.innerWidth > 992) {
                    // Desktop - collapse/expand
                    sidebar.classList.toggle('collapsed');
                    localStorage.setItem('sidebarCollapsed', sidebar.classList.contains('collapsed'));
                } else {
                    // Mobile - slide in/out
                    sidebar.classList.toggle('mobile-open');
                    if (overlay) overlay.classList.toggle('active');
                }
            });

            // Overlay'a tıklayınca kapat (Mobile)
            if (overlay) {
                overlay.addEventListener('click', function() {
                    sidebar.classList.remove('mobile-open');
                    overlay.classList.remove('active');
                });
            }

            // Window resize'da mobile state'i sıfırla
            window.addEventListener('resize', function() {
                if (window.innerWidth > 992) {
                    sidebar.classList.remove('mobile-open');
                    if (overlay) overlay.classList.remove('active');
                }
            });
        })();

        // ==================== THEME TOGGLE ====================
        (function() {
            var themeToggle = document.getElementById('themeToggle');
            if (!themeToggle) return;

            var html = document.documentElement;
            var icon = themeToggle.querySelector('i');

            // Sayfa yüklendiğinde icon'u güncelle
            var savedTheme = localStorage.getItem('theme') || 'light';
            if (savedTheme === 'dark' && icon) {
                icon.classList.remove('fa-moon');
                icon.classList.add('fa-sun');
            }

            // Toggle butonuna tıklama
            themeToggle.addEventListener('click', function() {
                var currentTheme = html.getAttribute('data-bs-theme');

                if (currentTheme === 'dark') {
                    html.setAttribute('data-bs-theme', 'light');
                    localStorage.setItem('theme', 'light');
                    if (icon) {
                        icon.classList.remove('fa-sun');
                        icon.classList.add('fa-moon');
                    }
                } else {
                    html.setAttribute('data-bs-theme', 'dark');
                    localStorage.setItem('theme', 'dark');
                    if (icon) {
                        icon.classList.remove('fa-moon');
                        icon.classList.add('fa-sun');
                    }
                }
            });
        })();

        // ==================== TOOLTIPS ====================
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function(tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>