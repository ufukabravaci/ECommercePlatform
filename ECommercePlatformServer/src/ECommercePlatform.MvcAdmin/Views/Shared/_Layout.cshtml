<!DOCTYPE html>
<html lang="tr" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Commerce Admin</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Dashboard CSS -->
    <link href="~/css/dashboard.css" rel="stylesheet" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @{
        var userName = Context.Session.GetString("UserName") ?? "User";
        var companyId = Context.Session.GetString("CompanyId");
        var initials = string.Join("", userName.Split(' ').Take(2).Select(x => x.FirstOrDefault())).ToUpper();
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    }

    <!-- Sidebar Overlay (Mobile) -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-logo">
                <i class="fas fa-store"></i>
            </div>
            <span class="sidebar-brand">E-Commerce</span>
        </div>

        <nav class="sidebar-nav">
            <!-- Main Navigation -->
            <div class="nav-section-title">Ana Menü</div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(currentAction == "Index" && currentController == "Home" ? "active" : "")"
                       asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
            </ul>

            <!-- E-Commerce -->
            <div class="nav-section-title">E-Ticaret</div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Product" ? "active" : "")" asp-controller="Product" asp-action="Index">
                        <i class="fas fa-box"></i>
                        <span>Ürünler</span>
                        <span class="badge bg-primary ms-auto">124</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Category" ? "active" : "")" asp-controller="Category" asp-action="Index">
                        <i class="fas fa-folder"></i>
                        <span>Kategoriler</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Order" ? "active" : "")" asp-controller="Order" asp-action="Index">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Siparişler</span>
                        <span class="badge bg-danger ms-auto">5</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Customer" ? "active" : "")" asp-controller="Customer" asp-action="Index">
                        <i class="fas fa-users"></i>
                        <span>Müşteriler</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Coupon" ? "active" : "")" asp-controller="Coupon" asp-action="Index">
                        <i class="fas fa-tags"></i>
                        <span>Kuponlar</span>
                    </a>
                </li>
            </ul>

            <!-- Analytics -->
            <div class="nav-section-title">Analiz</div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Report" ? "active" : "")" asp-controller="Report" asp-action="Sales">
                        <i class="fas fa-chart-line"></i>
                        <span>Satış Raporları</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Analytics" ? "active" : "")" asp-controller="Analytics" asp-action="Index">
                        <i class="fas fa-chart-pie"></i>
                        <span>İstatistikler</span>
                    </a>
                </li>
            </ul>

            <!-- Settings -->
            <div class="nav-section-title">Ayarlar</div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Company" ? "active" : "")" asp-controller="Company" asp-action="Index">
                        <i class="fas fa-building"></i>
                        <span>Şirket Bilgileri</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Settings" ? "active" : "")" asp-controller="Settings" asp-action="Index">
                        <i class="fas fa-cog"></i>
                        <span>Genel Ayarlar</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentAction == "Privacy" ? "active" : "")" asp-controller="Home" asp-action="Privacy">
                        <i class="fas fa-shield-alt"></i>
                        <span>Gizlilik</span>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="sidebar-footer">
            <div class="user-info" data-bs-toggle="dropdown" aria-expanded="false">
                <div class="user-avatar">@initials</div>
                <div class="user-details">
                    <div class="user-name">@userName</div>
                    <div class="user-role">@(string.IsNullOrEmpty(companyId) ? "Admin" : "Şirket Yöneticisi")</div>
                </div>
                <i class="fas fa-chevron-right ms-auto" style="font-size: 0.75rem; color: #94a3b8;"></i>
            </div>
            <ul class="dropdown-menu dropdown-menu-end mb-2" style="min-width: 200px; border-radius: 12px;">
                <li><a class="dropdown-item py-2" href="#"><i class="fas fa-user me-2 text-muted"></i>Profilim</a></li>
                <li><a class="dropdown-item py-2" href="#"><i class="fas fa-cog me-2 text-muted"></i>Ayarlar</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item py-2 text-danger" asp-controller="Auth" asp-action="Logout"><i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap</a></li>
            </ul>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Header -->
        <header class="main-header">
            <div class="header-left">
                <button class="sidebar-toggle" id="sidebarToggle" type="button">
                    <i class="fas fa-bars"></i>
                </button>

                <div class="search-box d-none d-md-block">
                    <i class="fas fa-search"></i>
                    <input type="text" id="globalSearch" placeholder="Ara... (Ctrl+K)" autocomplete="off">
                </div>
            </div>

            <div class="header-right">
                <!-- Theme Toggle -->
                <button class="header-btn" id="themeToggle" type="button" title="Tema Değiştir">
                    <i class="fas fa-moon"></i>
                </button>

                <!-- Notifications -->
                <div class="dropdown">
                    <button class="header-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-bell"></i>
                        <span class="badge">3</span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-end p-0" style="width: 320px; border-radius: 12px;">
                        <div class="p-3 border-bottom">
                            <h6 class="mb-0 fw-semibold">Bildirimler</h6>
                        </div>
                        <div class="notification-list" style="max-height: 300px; overflow-y: auto;">
                            <a href="#" class="dropdown-item d-flex gap-3 p-3">
                                <div class="flex-shrink-0">
                                    <div class="rounded-circle bg-primary bg-opacity-10 p-2">
                                        <i class="fas fa-shopping-cart text-primary"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <p class="mb-0 fw-medium">Yeni sipariş alındı</p>
                                    <small class="text-muted">2 dakika önce</small>
                                </div>
                            </a>
                            <a href="#" class="dropdown-item d-flex gap-3 p-3">
                                <div class="flex-shrink-0">
                                    <div class="rounded-circle bg-success bg-opacity-10 p-2">
                                        <i class="fas fa-check text-success"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <p class="mb-0 fw-medium">Ödeme onaylandı</p>
                                    <small class="text-muted">15 dakika önce</small>
                                </div>
                            </a>
                            <a href="#" class="dropdown-item d-flex gap-3 p-3">
                                <div class="flex-shrink-0">
                                    <div class="rounded-circle bg-warning bg-opacity-10 p-2">
                                        <i class="fas fa-exclamation text-warning"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <p class="mb-0 fw-medium">Stok uyarısı</p>
                                    <small class="text-muted">1 saat önce</small>
                                </div>
                            </a>
                        </div>
                        <div class="p-2 border-top text-center">
                            <a href="#" class="text-decoration-none small">Tümünü Gör</a>
                        </div>
                    </div>
                </div>

                <!-- User Menu -->
                <div class="dropdown">
                    <button class="header-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user-circle"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-end" style="min-width: 200px; border-radius: 12px;">
                        <div class="px-3 py-2 border-bottom">
                            <p class="mb-0 fw-semibold">@userName</p>
                            <small class="text-muted">@(string.IsNullOrEmpty(companyId) ? "Admin" : $"Şirket: {companyId}")</small>
                        </div>
                        <a class="dropdown-item py-2" href="#">
                            <i class="fas fa-user me-2 text-muted"></i>Profilim
                        </a>
                        <a class="dropdown-item py-2" href="#">
                            <i class="fas fa-cog me-2 text-muted"></i>Ayarlar
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item py-2 text-danger" asp-controller="Auth" asp-action="Logout">
                            <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                        </a>
                    </div>
                </div>
            </div>
        </header>

        <!-- Page Content -->
        <div class="page-content">
            @RenderBody()
        </div>
    </main>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Toastr -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <!-- Dashboard JS -->
    <script src="~/js/dashboard.js" asp-append-version="true"></script>

    <script>
        @if (TempData["SuccessMessage"] != null)
        {
                <text>toastr.success('@Html.Raw(TempData["SuccessMessage"])');</text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
                <text>toastr.error('@Html.Raw(TempData["ErrorMessage"])');</text>
        }

        // Keyboard Shortcut for Search
        document.addEventListener('keydown', function(e) {
            if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                e.preventDefault();
                document.getElementById('globalSearch')?.focus();
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>