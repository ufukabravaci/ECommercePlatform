@model ECommercePlatform.MvcAdmin.Models.Banners.BannerListViewModel

@{
    ViewData["Title"] = "Bannerlar";
    var apiBaseUrl = ViewBag.ApiBaseUrl as string ?? "";
}

<!-- Page Header -->
<div class="page-header d-flex justify-content-between align-items-center flex-wrap gap-3 mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-2">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active">Bannerlar</li>
            </ol>
        </nav>
        <h1 class="page-title">Banner Yönetimi</h1>
        <p class="page-subtitle mb-0">Ana sayfa slider ve banner görsellerini yönetin</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Create" class="btn btn-primary-gradient">
            <i class="fas fa-plus me-2"></i>Yeni Banner
        </a>
    </div>
</div>

<!-- Info Card -->
<div class="alert alert-info border-0 mb-4" style="border-radius: 12px; background: rgba(59, 130, 246, 0.1);">
    <div class="d-flex align-items-center">
        <i class="fas fa-info-circle text-info me-3 fa-lg"></i>
        <div>
            <strong>Bilgi:</strong> Bannerlar ana sayfada sıralama numarasına göre gösterilir.
            Düşük sıralama numarası önce görüntülenir.
        </div>
    </div>
</div>

<!-- Stats -->
<div class="row g-3 mb-4">
    <div class="col-12 col-md-4">
        <div class="card border-0 bg-primary bg-opacity-10">
            <div class="card-body py-3">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="rounded-circle bg-primary bg-opacity-25 p-2 d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                            <i class="fas fa-images text-primary"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="mb-0 fw-bold text-primary">@Model.Banners.Count</h5>
                        <small class="text-muted">Toplam Banner</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Banners Grid -->
@if (Model.Banners.Any())
{
    <div class="row g-4">
        @foreach (var banner in Model.Banners)
        {
            var imageUrl = !string.IsNullOrEmpty(banner.ImageUrl)
            ? (banner.ImageUrl.StartsWith("http") ? banner.ImageUrl : $"{apiBaseUrl}/{banner.ImageUrl.TrimStart('/')}")
            : "";

            <div class="col-12 col-md-6 col-xl-4">
                <div class="card h-100 banner-card">
                    <!-- Banner Image -->
                    <div class="banner-image-container position-relative">
                        @if (!string.IsNullOrEmpty(imageUrl))
                        {
                            <img src="@imageUrl" alt="@banner.Title" class="card-img-top banner-image">
                        }
                        else
                        {
                            <div class="card-img-top banner-image-placeholder d-flex align-items-center justify-content-center bg-light">
                                <i class="fas fa-image fa-3x text-muted"></i>
                            </div>
                        }
                        <div class="banner-order-badge">
                            <span class="badge bg-primary">#@banner.Order</span>
                        </div>
                    </div>

                    <!-- Banner Content -->
                    <div class="card-body">
                        <h5 class="card-title fw-semibold mb-2">@banner.Title</h5>
                        <p class="card-text text-muted small mb-3" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                            @banner.Description
                        </p>
                        <div class="d-flex align-items-center text-muted small">
                            <i class="fas fa-link me-2"></i>
                            <a href="@banner.TargetUrl" target="_blank" class="text-truncate text-decoration-none" style="max-width: 200px;" title="@banner.TargetUrl">
                                @banner.TargetUrl
                            </a>
                        </div>
                    </div>

                    <!-- Banner Actions -->
                    <div class="card-footer bg-transparent border-top-0 pt-0">
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@banner.Id" class="btn btn-sm btn-outline-primary flex-grow-1" style="border-radius: 8px;">
                                <i class="fas fa-edit me-1"></i>Düzenle
                            </a>
                            <button type="button" class="btn btn-sm btn-outline-danger" style="border-radius: 8px;"
                                    onclick="confirmDelete('@banner.Id', '@banner.Title')">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <!-- Empty State -->
    <div class="card">
        <div class="card-body text-center py-5">
            <div class="mb-4">
                <i class="fas fa-images fa-4x text-muted opacity-50"></i>
            </div>
            <h5 class="text-muted">Banner Bulunamadı</h5>
            <p class="text-muted mb-4">Henüz hiç banner eklenmemiş.</p>
            <a asp-action="Create" class="btn btn-primary-gradient">
                <i class="fas fa-plus me-2"></i>İlk Banner'ı Ekle
            </a>
        </div>
    </div>
}

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border-radius: 16px;">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle text-danger me-2"></i>Banner'ı Sil
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">
                    <strong id="deleteBannerTitle"></strong> başlıklı banner'ı silmek istediğinize emin misiniz?
                </p>
                <p class="text-muted small mt-2 mb-0">
                    Bu işlem geri alınamaz.
                </p>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" style="border-radius: 10px;">
                    Vazgeç
                </button>
                <form id="deleteForm" method="post" asp-action="Delete" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteBannerId" />
                    <button type="submit" class="btn btn-danger" style="border-radius: 10px;">
                        <i class="fas fa-trash-alt me-2"></i>Sil
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .btn-primary-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            border-radius: 10px;
        }

            .btn-primary-gradient:hover {
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
                color: white;
            }

        .banner-card {
            transition: all 0.3s ease;
            border-radius: 16px;
            overflow: hidden;
        }

            .banner-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
            }

        .banner-image-container {
            height: 180px;
            overflow: hidden;
        }

        .banner-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .banner-card:hover .banner-image {
            transform: scale(1.05);
        }

        .banner-image-placeholder {
            height: 100%;
        }

        .banner-order-badge {
            position: absolute;
            top: 12px;
            right: 12px;
        }

            .banner-order-badge .badge {
                font-size: 0.85rem;
                padding: 0.5rem 0.75rem;
                border-radius: 8px;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
            }
    </style>
}

@section Scripts {
    <script>
        function confirmDelete(bannerId, bannerTitle) {
            document.getElementById('deleteBannerTitle').textContent = bannerTitle;
            document.getElementById('deleteBannerId').value = bannerId;
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
    </script>
}