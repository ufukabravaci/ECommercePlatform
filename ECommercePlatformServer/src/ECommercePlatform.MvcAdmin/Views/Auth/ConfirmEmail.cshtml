@model ConfirmEmailViewModel
@{
    ViewData["Title"] = "Email Doğrulama";
}

<div class="auth-card">
    <div class="auth-header">
        <div class="logo">
            <i class="fas fa-envelope-circle-check"></i>
        </div>
        <h1>Email Adresinizi Doğrulayın</h1>
        <p>Kayıt işlemini tamamlamak için email adresinize gönderilen kodu giriniz</p>
    </div>

    <div class="auth-body">
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-danger d-flex align-items-center" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                <span>@ViewBag.Error</span>
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success d-flex align-items-center" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                <span>@TempData["SuccessMessage"]</span>
            </div>
        }

        <div class="text-center mb-4">
            <div class="position-relative d-inline-block">
                <div class="d-inline-flex align-items-center justify-content-center"
                     style="width: 100px; height: 100px; background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%); border-radius: 50%;">
                    <i class="fas fa-envelope fa-3x" style="color: #10b981;"></i>
                </div>
                <div class="position-absolute" style="bottom: 0; right: 0; width: 35px; height: 35px; background: #10b981; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                    <i class="fas fa-paper-plane text-white"></i>
                </div>
            </div>

            <h5 class="mt-4 mb-2">Doğrulama Kodu Gönderildi!</h5>
            <p class="text-muted mb-0">
                <strong class="text-dark">@Model.Email</strong><br>
                adresine bir doğrulama kodu gönderdik
            </p>
        </div>

        <form asp-action="ConfirmEmail" method="post" id="confirmEmailForm">
            <input type="hidden" name="Email" value="@Model.Email" />
            <input type="hidden" name="Code" id="fullCode" />

            <div class="otp-inputs">
                <input type="text" class="otp-input" maxlength="1" data-index="0" inputmode="numeric" pattern="[0-9]*" autofocus>
                <input type="text" class="otp-input" maxlength="1" data-index="1" inputmode="numeric" pattern="[0-9]*">
                <input type="text" class="otp-input" maxlength="1" data-index="2" inputmode="numeric" pattern="[0-9]*">
                <input type="text" class="otp-input" maxlength="1" data-index="3" inputmode="numeric" pattern="[0-9]*">
                <input type="text" class="otp-input" maxlength="1" data-index="4" inputmode="numeric" pattern="[0-9]*">
                <input type="text" class="otp-input" maxlength="1" data-index="5" inputmode="numeric" pattern="[0-9]*">
            </div>

            <button type="submit" class="btn btn-primary-gradient w-100" id="confirmBtn">
                <span class="btn-text">
                    <i class="fas fa-check-circle me-2"></i>Email'i Doğrula
                </span>
                <span class="btn-loading d-none">
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                    Doğrulanıyor...
                </span>
            </button>
        </form>

        <div class="resend-timer mt-4">
            <p class="mb-2 text-muted">Kod gelmedi mi? Spam klasörünü kontrol edin.</p>
            <a href="#" id="resendLink" class="disabled">
                <i class="fas fa-redo me-1"></i>
                <span id="resendText">Tekrar Gönder (<span id="countdown">60</span>s)</span>
            </a>
        </div>

        <div class="auth-footer mt-4 pt-3 border-top">
            <div class="d-flex justify-content-between">
                <a asp-action="Login" class="text-decoration-none text-muted">
                    <i class="fas fa-arrow-left me-1"></i>Giriş Yap
                </a>
                <a asp-action="Register" class="text-decoration-none text-muted">
                    Farklı email ile kayıt<i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize OTP Handler (auto-submit disabled for email confirm)
            new OTPHandler('.otp-inputs', 'fullCode', 'confirmEmailForm', false);

            // Initialize Resend Timer
            new ResendTimer('resendLink', 'resendText', 'countdown', 60);

            // Form validation before submit
            document.getElementById('confirmEmailForm').addEventListener('submit', function(e) {
                const code = document.getElementById('fullCode').value;
                if (code.length !== 6) {
                    e.preventDefault();
                    toastr.error('Lütfen 6 haneli kodu eksiksiz giriniz.');
                    return false;
                }

                // Show loading state
                const btn = document.getElementById('confirmBtn');
                btn.querySelector('.btn-text').classList.add('d-none');
                btn.querySelector('.btn-loading').classList.remove('d-none');
                btn.disabled = true;
            });
        });
    </script>
}