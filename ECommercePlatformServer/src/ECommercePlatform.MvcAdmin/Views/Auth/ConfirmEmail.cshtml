@using ECommercePlatform.MvcAdmin.Models
@model ConfirmEmailViewModel
@{
    Layout = null; // Layout kullanmıyoruz, bağımsız sayfa
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Email Doğrulama | E-Ticaret</title>

    <!-- Fontlar -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@fontsource/source-sans-3@5.0.12/index.css" crossorigin="anonymous">
    <!-- İkonlar -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.min.css" crossorigin="anonymous">
    <!-- AdminLTE v4 CSS -->
    <link rel="stylesheet" href="~/css/adminlte.min.css">

    <style>
        /* Arkaplanı modern yapalım */
        body {
            background: #e9ecef;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .login-box {
            width: 400px;
        }
        .card {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            border: none;
            border-radius: 10px;
        }
    </style>
</head>
<body class="login-page bg-body-secondary">

    <div class="login-box">
        <div class="card card-outline card-success">
            <div class="card-header text-center">
                <a href="#" class="h1 text-decoration-none"><b>Hesap</b> Doğrulama</a>
            </div>

            <div class="card-body">
                <p class="login-box-msg text-muted">
                    Güvenliğiniz için lütfen <br>
                    <strong>@Model.Email</strong> <br>
                    adresine gönderilen 6 haneli kodu giriniz.
                </p>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2"></i>
                        <div>@ViewBag.Error</div>
                    </div>
                }

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success d-flex align-items-center" role="alert">
                        <i class="bi bi-check-circle-fill flex-shrink-0 me-2"></i>
                        <div>@TempData["SuccessMessage"]</div>
                    </div>
                }

                <form asp-action="ConfirmEmail" method="post">
                    <input type="hidden" asp-for="Email" />

                    <div class="input-group mb-3">
                        <span class="input-group-text bg-white"><i class="bi bi-key"></i></span>
                        <input asp-for="Code" class="form-control" placeholder="Onay Kodu (Örn: 123456)" maxlength="6" style="letter-spacing: 2px; text-align: center; font-weight: bold;" required autocomplete="off">
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check2-circle me-1"></i> Doğrula
                        </button>
                    </div>
                </form>

                <div class="mt-4 text-center">
                    <p class="mb-0">
                        Kod gelmedi mi? <a href="#" class="text-success fw-bold">Tekrar Gönder</a>
                    </p>
                    <p class="mt-2">
                        <a href="/Auth/Login" class="text-secondary text-sm">
                            <i class="bi bi-arrow-left"></i> Giriş ekranına dön
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Scriptler -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/adminlte.min.js"></script>
</body>
</html>