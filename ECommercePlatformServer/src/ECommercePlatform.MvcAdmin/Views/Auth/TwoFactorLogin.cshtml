@using ECommercePlatform.MvcAdmin.Models
@model TwoFactorLoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Doğrulama Kodu | E-Ticaret</title>

    <!-- Fontlar -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@fontsource/source-sans-3@5.0.12/index.css" crossorigin="anonymous">
    <!-- İkonlar -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.min.css" crossorigin="anonymous">
    <!-- AdminLTE v4 CSS -->
    <link rel="stylesheet" href="~/css/adminlte.min.css">

    <style>
        /* Sayfayı ortalamak için basit stil */
        body {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-box {
            width: 400px;
        }
        /* Kartı biraz daha belirginleştirelim */
        .card {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            border: none;
            border-radius: 10px;
        }
    </style>
</head>
<body class="login-page bg-body-secondary">

    <div class="login-box">
        <div class="card card-outline card-warning">
            <div class="card-header text-center">
                <a href="#" class="h1 text-decoration-none"><b>2FA</b> Doğrulama</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg text-muted">Lütfen mail adresinize gönderilen <br> 6 haneli kodu giriniz.</p>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2"></i>
                        <div>@ViewBag.Error</div>
                    </div>
                }

                <form asp-action="TwoFactorLogin" method="post">
                    <input type="hidden" asp-for="Email" />

                    <div class="input-group mb-3">
                        <span class="input-group-text bg-white"><i class="bi bi-key-fill text-warning"></i></span>
                        <!-- Kod girişi için özel stil (Letter spacing) -->
                        <input asp-for="Code" class="form-control form-control-lg text-center fw-bold"
                               placeholder="______" maxlength="6"
                               style="letter-spacing: 8px; font-size: 1.5rem;"
                               required autocomplete="off" autofocus>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-warning w-100 text-white fw-bold shadow-sm">
                                <i class="bi bi-shield-check me-2"></i> Doğrula ve Giriş Yap
                            </button>
                        </div>
                    </div>
                </form>

                <div class="mt-4 text-center">
                    <p class="mb-0">
                        Kod gelmedi mi? <a href="#" class="text-warning fw-bold">Tekrar Gönder</a>
                    </p>
                    <p class="mt-2">
                        <a href="/Auth/Login" class="text-secondary text-sm">
                            <i class="bi bi-arrow-left"></i> Giriş ekranına dön
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Scriptler (Bootstrap ve AdminLTE) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/adminlte.min.js"></script>
</body>
</html>