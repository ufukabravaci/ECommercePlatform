

@model LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="auth-card">
    <div class="auth-header">
        <div class="logo">
            <i class="fas fa-store"></i>
        </div>
        <h1>Hoş Geldiniz</h1>
        <p>Hesabınıza giriş yapın</p>
    </div>

    <div class="auth-body">
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-danger d-flex align-items-center" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                <span>@ViewBag.Error</span>
            </div>
        }

        <form asp-action="Login" method="post" id="loginForm">
            <div class="input-group-icon form-floating">
                <i class="fas fa-user input-icon"></i>
                <input type="text"
                       class="form-control"
                       id="EmailOrUserName"
                       name="EmailOrUserName"
                       placeholder="Email veya Kullanıcı Adı"
                       value="@Model?.EmailOrUserName"
                       required
                       autofocus>
                <label for="EmailOrUserName">Email veya Kullanıcı Adı</label>
            </div>
            <span asp-validation-for="EmailOrUserName" class="field-validation-error"></span>

            <div class="input-group-icon form-floating">
                <i class="fas fa-lock input-icon"></i>
                <input type="password"
                       class="form-control"
                       id="Password"
                       name="Password"
                       placeholder="Şifre"
                       required>
                <label for="Password">Şifre</label>
                <button type="button" class="password-toggle" tabindex="-1">
                    <i class="fas fa-eye"></i>
                </button>
            </div>
            <span asp-validation-for="Password" class="field-validation-error"></span>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe">
                    <label class="form-check-label" for="rememberMe">
                        Beni Hatırla
                    </label>
                </div>
                <a href="#" class="text-decoration-none" style="color: #667eea; font-size: 0.9rem;">
                    Şifremi Unuttum
                </a>
            </div>

            <button type="submit" class="btn btn-primary-gradient w-100" id="loginBtn">
                <span class="btn-text">
                    <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                </span>
                <span class="btn-loading d-none">
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                    Giriş yapılıyor...
                </span>
            </button>
        </form>

        <div class="divider">
            <span>veya</span>
        </div>

        <div class="d-grid gap-2">
            <button type="button" class="btn btn-outline-secondary" style="border-radius: 12px; padding: 0.75rem;">
                <i class="fab fa-google me-2 text-danger"></i>Google ile Giriş
            </button>
        </div>

        <div class="auth-footer">
            <p class="mb-0">
                Hesabınız yok mu?
                <a asp-action="Register">Şirket Kaydı Oluşturun</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        initFormLoading('loginForm', 'loginBtn');
    </script>
}